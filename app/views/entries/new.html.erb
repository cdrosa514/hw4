<h1>New Entry</h1>

<form action="/entries" method="post">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

	  <form action="/entries" method="entry" enctype="multipart/form-data">
	    <div class="mb-3">
	      <label for="title_input" class="form-label">Title</label>
	      <input type="text" name="body" id="title_input" class="form-control">
	    </div>
	    <div class="mb-3">
        <label for="description_input">Description</label>
        <input type="text" name="description" id="description_input" class="form-control">
	    </div>
      <div class="mb-3">
        <label for="occurred_on_input">Occured On</label>
        <input type="date" name="occurred_on" id="occurred_on_input" class="form-control">
	    </div>
	    <div class="mb-3">
	      <label for="uploaded_image_input" class="form-label">Upload Image</label>
	      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
	    </div>
	    <button class="btn btn-primary">Save</button>
	    <a href="/entries">Cancel</a>
  </form>


